{
  "name": "deploy-scp",
  "version": "0.0.14",
  "description": "a front end deploy tool for scp",
  "bin": {
    "sdeploy": "bin/index.js"
  },
  "types": "index.d.ts",
  "files": [
    "bin",
    "templates",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:leoDreamer/scp-deploy.git"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ext=.ts,.tsx,.js,.jsx --fix",
    "prebuild": "tsc --build --clean",
    "build": "tsc --build",
    "preversion": "npm run build"
  },
  "keywords": [
    "scp",
    "deploy"
  ],
  "author": "leoDreamer <leoDreamer@qq.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "signale": "^1.4.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.24.7",
    "@opd/eslint-config": "^2.0.2",
    "@opd/prettier-config": "^2.0.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.185",
    "@types/node": "^18.0.2",
    "@types/signale": "^1.4.7",
    "husky": "^9.0.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "prettier": "@opd/prettier-config",
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier -c --write"
    ]
  }
}
